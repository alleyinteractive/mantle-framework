        "alleyinteractive/composer-wordpress-autoloader": "^1.0",
        "mantle-framework/contracts": "^0.12"
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Mantle\\View": "./"
            }
        }
    },
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley",
