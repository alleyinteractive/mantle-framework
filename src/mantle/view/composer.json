{
    "name": "mantle-framework/view",
    "description": "The Mantle Framework View Package",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "alleyinteractive/composer-wordpress-autoloader": "^0.4",
        "mantle-framework/contracts": "^0.1"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.1-dev"
        },
        "wordpress-autoloader": {
            "autoload": {
                "Mantle\\View": "./"
            }
        }
    },
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley",
            "email": "info@alley.co"
        }
    ],
    "suggest": {
        "phpunit/phpunit": "Required to use assertions and run tests."
    },
    "minimum-stability": "dev",
    "config": {
      "sort-packages": true
    }
}
