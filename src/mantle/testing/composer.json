{
    "name": "mantle-framework/testing",
    "description": "The Mantle Framework Testing Package",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "alleyinteractive/composer-wordpress-autoloader": "^0.4",
        "mantle-framework/contracts": "^0.1",
        "mantle-framework/http": "^0.1",
        "mantle-framework/database": "^0.1",
        "mantle-framework/support": "^0.1"
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Mantle\\Testing": "./"
            }
        }
    },
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley",
            "email": "info@alley.co"
        }
    ],
    "suggest": {
        "phpunit/phpunit": "Required to use assertions and run tests."
    },
    "minimum-stability": "dev",
    "config": {
      "sort-packages": true
    },
    "autoload": {
        "files": [
            "autoload.php"
        ]
    }
}
