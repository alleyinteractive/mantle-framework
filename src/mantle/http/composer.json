{
    "name": "mantle-framework/http",
    "description": "The Mantle Framework Http Package",
    "type": "library",
    "require": {
        "php": "^8.2",
        "mantle-framework/contracts": "^1.0",
        "mantle-framework/filesystem": "^1.0",
        "mantle-framework/support": "^1.0",
        "symfony/http-foundation": "^7.2.0",
        "symfony/http-kernel": "^7.0",
        "symfony/mime": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/var-dumper": "^7.0"
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload": {
                "Mantle\\Http": "./"
            }
        }
    },
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Alley",
            "email": "mantle@alley.com"
        }
    ],
    "autoload": {
        "files": [
            "autoload.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "suggest": {
        "illuminate/view": "For assertions in tests that use Blade templating"
    }
}
